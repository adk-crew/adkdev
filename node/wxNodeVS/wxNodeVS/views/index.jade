extends layout

block content
	script(src='public/javascripts/jquery-1.10.2.min.js') 
	script(src='public/javascripts/jquery-ui-1.8.20.min.js')
	script(src='public/javascripts/socket.io.js')
	script(src='public/javascripts/d3.min.js')
	script(src='public/javascripts/gauge.js')
	script(src='public/javascripts/client.js')
	style.
		body {
			font: 10px sans-serif;
		}
		.axis path,
		.axis line {
			fill: none;
			stroke: #000;
			shape-rendering: crispEdges;
		}
		.x.axis path {
			display: none;
		}
		.line {
			fill: none;
			stroke: steelblue;
			stroke-width: 1.5px;
		}
	h1 Welcome to Wx Watch!
	h2(id='head1') header 1
	h2(id='head2') header 2
	h2(id='head3') header 3
	div(id='guageContainer')
